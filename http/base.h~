#ifndef _HTTP_BUASE_H_
#define _HTTP_BUASE_H_
#include <stdio.h>
#include <stdlib.h>
#include <string.h>

#define OK 0
#define FILE_NO_EXIST 1
#define FILE_NO_ACCESS 2
#define CANCEL 3
#define MEMERROR -1
typedef enum {
	t_char,
	t_uchar,
	t_int,
	t_uint,
	t_long,
}value_type;

typedef struct key {
	char *name;
	void *value;
	value_type type;
	key *next;
}key;



typedef struct web_conf {
	char *root;
	char *index_file;
	char *err404;
	char *server;
	web_conf *next;
}web_conf;

typedef struct http_conf {
	int web_count;
	int port;
	key *mimetype;
	web_conf *web;
}http_conf;


#endif
